<!DOCTYPE html>
<html lang="en">
  <head>    
    <style>
      body {
    margin: 0;
    background-color: rgb(29, 29, 29);
    
  }

  h1{
      color: #f5f3f3;
  }

  .registration-popup .content {
    background-color: rgb(62, 62, 62);
    width: 300px;
    height: 450px;
    z-index: 2;
    text-align: center;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(1);
    padding: 20px;
    border-radius: 20px;
    position: absolute;
    box-shadow: rgb(117, 117, 117) 0px 20px 30px -10px;
    z-index: 1;

  }


  .input .inp {
    padding: 5px;
    border-radius: 10px;
    border: none;
    margin-bottom: 15px;
    outline: none;
  }
  .reg-open {
    color: black;
    padding: 30px 50px;
    border-radius: 40px;
    border: none;
    position: absolute;
    top: 15%;
    left: 50%;
    transform: translate(-50%, -50%);
    box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;
    transition: box-shadow 0.35s ease !important;
    outline: none;
  }
  
  #register,
  #reset {
    margin-top: 20px;
    padding: 10px 15px;
    border-radius: 40px;
    border: none;
    transition: box-shadow 0.35s ease !important;
    outline: none;
  }
    </style>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resgistration Form</title>
    <link rel="stylesheet" href="reg.css">
  </head>
  <body>
    <%- include("../partials/header.ejs")%>

    <div class="registration-popup" id="regpopup">
      <form action="/create-new-acc" method="POST" >
        <div class="content">   
          <h1 id="h1">Create new account</h1>
          <div class="input">
            <input type="text" placeholder="First Name" class="inp"  id="name"/>
          </div>
          <div class="input">
            <input type="text" placeholder="Second Name" class="inp" id="secname"/>
          </div>
          <div class="input">
            <input type="text" placeholder="Username" class="inp" id="username" />
          </div>
          <div class="input">
              <input type="tel" placeholder="Phone Number" class="inp" id="phone" />
          </div>
          <div class="input">
              <input type="text" placeholder="Address" class="inp" id="addres" />
          </div>
          <div class="input">
            <input type="password" placeholder="Password" class="inp" id="pass" />
          </div>
          <div class="input">
            <input type="password" placeholder="Repeat password" class="inp" id="repass" />
          </div>
          <input type="submit" id="register" value="register"  >
          <input type="button" id="reset" value="Reset" onclick="resett()" >
        </div>
      </form>
    </div>
  
    <button id = "in_or_up " onclick="location.href='./signin'" class="reg-open">Sign-In</button>
    <%- include("../partials/footer.ejs"); %>

    <script>


    function resett() {
      let inputs = document.getElementsByClassName("inp");
      for (inp of inputs) {
          inp.value = "";
      }
    }
  
    </script>
  </body>
</html>
